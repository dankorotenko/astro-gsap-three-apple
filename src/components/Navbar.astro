---
import { Image } from "astro:assets";
import { bagImg, searchImg } from "../utils";

import { navLists } from "../constants";
---

<header class="w-full py-5 sm:px-10 px-5 flex justify-between items-center">
  <nav class="flex w-full screen-max-width">
    <img src="/apple.svg" alt="apple-logo" width={14} height={18} />
    <div class="flex flex-1 justify-center max-sm:hidden">
      {
        navLists.map((nav, i) => (
          <div class="px-5 text-sm cursor-pointer text-gray hover:text-white transition-all">
            {nav}
          </div>
        ))
      }
    </div>
    <div class="flex items-baseline gap-7 max-sm:justify-end max-sm:flex-1">
      <Image src={searchImg} alt="search" width={18} height={18} />
      <Image src={bagImg} alt="bag" width={18} height={18} />
    </div>
  </nav>
</header>
